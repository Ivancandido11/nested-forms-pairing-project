<div class="w-100">
  <div class="d-flex justify-content-between align-items-start pt-5 mx-5">
    <h1>Doctors</h1>
    <button class="btn btn-small btn-primary">
      <%= link_to "New Doctor", new_doctor_path, class: "text-white" %>
    </button>
  </div>
  <div class="mx-5">
    <ul>
      <% @doctors.each do |doctor| %>
        <li><%= link_to doctor.name, doctor %></li>
      <% end %>
    </ul>
  </div>
</div>