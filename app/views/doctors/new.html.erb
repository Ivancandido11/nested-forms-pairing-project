<div class="w-100 mx-5">
  <div class="py-5">
    <h1>New Doctor</h1>
  </div>

  <%= form_for @doctor do |form| %>
    <%= form.label :name %>
    <%= form.text_field :name %><br>

    <%= form.fields_for :patients do |patient| %>
      <%= patient.label "Patient Name" %>
      <%= patient.text_field :name %><br>

      <%= patient.label "Patient Age" %>
      <%= patient.number_field :age %><br>
    <% end %>
    <%= form.submit %>
  <% end %>
</div>